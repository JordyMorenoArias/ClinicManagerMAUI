@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Clinic Manager</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column flex-grow-1">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Citas">
                Citas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Pacientes" Match="NavLinkMatch.All">
                Pacientes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Empleados">
                Empleados
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reportes">
                Reportes
            </NavLink>
        </div>
    </nav>
    <div class="mt-auto p-3">
        <button class="btn btn-primary w-100" @onclick="Logout">Cerrar sesión</button>
    </div>
</div>

@code {
    private void Logout()
    {
        NavigationManager.NavigateTo("/");
    }
}